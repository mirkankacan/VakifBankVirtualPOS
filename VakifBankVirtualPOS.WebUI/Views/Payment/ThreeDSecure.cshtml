@{
    ViewData["Title"] = "3D Secure Doğrulama";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .loading-container {
            text-align: center;
            color: white;
        }
        .spinner {
            width: 50px;
            height: 50px;
            border: 5px solid rgba(255, 255, 255, 0.3);
            border-top-color: white;
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin: 0 auto 20px;
        }
        @@keyframes spin {
            to { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="loading-container">
        <div class="spinner"></div>
        <h3>3D Secure Doğrulama Yapılıyor...</h3>
        <p>Lütfen bekleyin, banka sayfasına yönlendiriliyorsunuz.</p>
    </div>

    @if (ViewBag.ACSUrl != null && !string.IsNullOrEmpty(ViewBag.ACSUrl.ToString()))
    {
        <form id="threeDSecureForm" method="post" action="@ViewBag.ACSUrl" style="display: none;">
            <input type="hidden" name="PaReq" value="@ViewBag.PAReq" />
            <input type="hidden" name="TermUrl" value="@ViewBag.TermUrl" />
            <input type="hidden" name="MD" value="@ViewBag.MD" />
        </form>

        <script>
            // Formu otomatik submit et
            window.onload = function() {
                document.getElementById('threeDSecureForm').submit();
            };
        </script>
    }
    else
    {
        <div class="alert alert-warning">
            <h4>3D Secure Bilgileri Bulunamadı</h4>
            <p>Status: @ViewBag.Status</p>
            <p>Message: @ViewBag.Message</p>
            <p>ACS URL bulunamadı. Message içindeki URL'leri kontrol edin.</p>
            <a href="@Url.Action("Index", "Payment")" class="btn btn-primary mt-3">Geri Dön</a>
        </div>
    }
</body>
</html>