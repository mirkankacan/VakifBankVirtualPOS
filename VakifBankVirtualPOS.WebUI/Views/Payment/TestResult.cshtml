@{
    ViewData["Title"] = "Test Sonucu";
}

<div class="row justify-content-center">
    <div class="col-md-10">
        <div class="card shadow">
            <div class="card-header @(ViewBag.Success == true ? "bg-success" : "bg-danger") text-white">
                <h3 class="card-title mb-0">
                    @if (ViewBag.Success == true)
                    {
                        <text>✓ Test Başarılı</text>
                    }
                    else
                    {
                        <text>✗ Test Başarısız</text>
                    }
                </h3>
            </div>
            <div class="card-body">
                @if (ViewBag.Error != null)
                {
                    <div class="alert alert-danger" role="alert">
                        <strong>Hata:</strong> @ViewBag.Error
                    </div>
                }

                @if (ViewBag.Response != null)
                {
                    <div class="mb-3">
                        <h5>API Yanıtı:</h5>
                        <pre class="bg-light p-3 rounded" style="max-height: 500px; overflow-y: auto;"><code>@ViewBag.Response</code></pre>
                    </div>
                }

                <div class="d-grid gap-2 mt-4">
                    <a asp-controller="Payment" asp-action="Index" class="btn btn-primary">
                        Yeni Test
                    </a>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                        Ana Sayfa
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

